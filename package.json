{
  "name": "omega-edit-vscode",
  "displayName": "Omega Edit for VS Code",
  "description": "Omega Edit provide flexible editing of massive files in VS Code.",
  "version": "0.0.1",
  "publisher": "ctc",
  "license": "Apache-2.0",
  "repository": "https://github.com/ctc-oss/omega-edit-vscode",
  "main": "out/ext.js",
  "activationEvents": [
    "onCommand:omega.simple"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "package": "vsce package",
    "compile": "tsc -p ./",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/ext.webpack.config.js",
    "watch2": "tsc -watch -p ./",
    "lint": "yarn run prettier src -c",
    "pretest": "yarn run compile",
    "test": "node node_modules/mocha/bin/_mocha -u tdd --timeout 999999 --colors ./out/tests"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.21",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.3.0",
    "glob": "^7.1.6",
    "mocha": "^9.2.1",
    "node-loader": "^2.0.0",
    "omega-edit": "0.6.3-8",
    "prettier": "^2.3.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "vsce": "^2.6.3",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.1"
  },
  "contributes": {
    "commands": [
      {
        "command": "omega.simple",
        "title": "Simple Omega Edit Î©",
        "category": "Omega"
      }
    ],
    "commandPalette": [
      {
        "command": "omega.simple"
      }
    ]
  }
}
